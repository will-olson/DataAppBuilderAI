# Sigma Framework Configuration Examples
# Copy this file to .env and modify the values as needed

# =============================================================================
# STANDALONE MODE (Default - SQLite)
# =============================================================================
SIGMA_MODE=standalone
DATABASE_MODE=sqlite

# =============================================================================
# MOCK WAREHOUSE MODE (Local Sigma Testing)
# =============================================================================
# SIGMA_MODE=mock_warehouse
# DATABASE_MODE=mock_warehouse
# MOCK_WAREHOUSE_ENABLED=true
# MOCK_WAREHOUSE_DATA_PATH=server/mock_warehouse/data
# MOCK_WAREHOUSE_SCHEMA_PATH=server/mock_warehouse/schemas
# MOCK_WAREHOUSE_AUTO_SYNC=true

# =============================================================================
# SIGMA INTEGRATION MODE (Production)
# =============================================================================
# SIGMA_MODE=sigma
# DATABASE_MODE=real_warehouse
# SIGMA_INTEGRATION_ENABLED=true
# SIGMA_WAREHOUSE_TYPE=snowflake

# Snowflake Configuration (when using Snowflake)
# SNOWFLAKE_ACCOUNT=your_account
# SNOWFLAKE_USER=your_user
# SNOWFLAKE_PASSWORD=your_password
# SNOWFLAKE_WAREHOUSE=your_warehouse
# SNOWFLAKE_DATABASE=your_database
# SNOWFLAKE_SCHEMA=your_schema

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
DEBUG=true
SECRET_KEY=your-secret-key-here
DATABASE_URL=sqlite:///app.db

# =============================================================================
# LOGGING
# =============================================================================
LOG_LEVEL=INFO 